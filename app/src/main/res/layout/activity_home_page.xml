<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/ravgoz2pj1g6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrnd_color_default"
        android:fadingEdgeLength="50dp"
        android:fillViewport="true"
        android:paddingHorizontal="15dp"
        android:paddingVertical="27dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rrmmrcwimkng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/logo_mazen"
                    android:layout_width="145dp"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_mazen" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rtqhnkdnnvsl"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/r42i2uyzarqe"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_layout_default"
                            android:elevation="4dp"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:paddingVertical="29dp">

                            <TextView
                                android:id="@+id/rosq9p5gnarf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_bold"
                                android:text="Total Allowance:"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/total_allowance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_regular"
                                android:gravity="end"
                                android:text="0 PHP"
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/rwukzsucl3qs"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_layout_default"
                            android:elevation="4dp"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:paddingVertical="25dp">

                            <TextView
                                android:id="@+id/rosq9p5gnarf1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_bold"
                                android:text="Savings:"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/savings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_regular"
                                android:gravity="end"
                                android:text="0 PHP"
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/rz8bp40msu4j"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_layout_default"
                            android:elevation="4dp"
                            android:orientation="horizontal"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/rosq9p5gnarf2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_bold"
                                android:text="Overall Expenses:"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/overall_expenses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/magra_regular"
                                android:gravity="end"
                                android:text="0 PHP"
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ry0g3hjb0r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="9dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                    <TextView
                        android:id="@+id/r6dy9uxwiczd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/magra_bold"
                        android:text="Daily"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="30dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view_history_day"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#FED9B7"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        app:srcCompat="@drawable/round_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatbot_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#FED9B7"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995"
        app:srcCompat="@drawable/ai_button_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>

